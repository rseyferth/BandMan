source 'https://rubygems.org'
ruby '1.9.3'

# Rails version
gem 'rails', '3.2.1'


# I'll be deployed on Heroku cloud
gem "heroku"



# Dev and test database
group :development, :test do
	gem 'sqlite3'
end

# Postgres db for production
group :production do
	gem 'pg'
end

# Styling gems
gem "compass"
gem 'sass-rails',   '~> 3.2.3'
gem 'uglifier', '>= 1.0.3'
gem 'compass-rails'  
 
# Javascript gems
gem 'jquery-rails'
gem "i18n-js"
gem "js-routes"

# Text functions
gem 'rails_autolink'

# To use ActiveModel has_secure_password
gem 'bcrypt-ruby', '~> 3.0.0'

# Carmen rails for localized country/region info
gem 'carmen-rails', '~> 1.0.0.beta3'

# JS engine
gem "execjs"
gem "therubyracer"

# Paperclip (images in models)
gem 'paperclip', "~> 3.0"

# Redactor editor
gem 'redactor-rails'

